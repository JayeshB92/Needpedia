<div class="container-flex">
  <div class="col-md-12 notes-box">
    <div class="row post-header">
      <h1>
        My Notes
      </h1>
    </div>
    <div class="row">
      <% @feed.each do |f| %>
        <% if f.is_a? Post %>
          <div class="row note-box">
            <h3 class="note-title">
              <%= link_to f.title, post_path(f), :class => "title-link" %>
            </h3>
            <div class="note-body">
              <%= truncate(f.post_body, length: 450) %> <%= link_to "read more", post_path(f) %>
            </div>
            <div class="row box-link-row text-center">
              <div class="box-links col-md-offset-5 col-md-2">
                <b><%= link_to "Comments", root_path, :class => "b6" %></b>
              </div>
              <div class="box-links col-md-2">
                <b><%= link_to "Ideas", root_path, :class=> 'b6' %></b>
              </div>
              <div class="box-links col-md-2">
                <b><%= link_to "Proposals", root_path, :class => "b6"%></b>
              </div>
            </div>
          </div>
        <% elsif f.is_a? Pic %>
          <div class='note-box'>
            <h3 class="note-title">
              <%= link_to f.name, pic_path(f), class: "pic-link" %>
            </h3>
            <p class="note-body">
              <%= truncate(f.description, length: 50) %>
            </p>
            <p class="text-center">
              <%= image_tag(f.image, {:style => "width:70%;", :class => "profile-pic text-center"}) %>
            </p>
          </div>
        <% elsif f.is_a? Video %>
          <div class='note-box'>
            <h3 class="note-title">
              <%= link_to f.title, video_path(f), class: "pic-link" %>
            </h3>
            <p class="note-body">
              <%= truncate(f.description, length: 50) %>
            </p>
            <p class="text-center">
              <iframe width="420" height="315"
                      src="https://www.youtube.com/embed/<%= f.video %>">
              </iframe>
            </p>
          </div>
        <% else %>
          <div class="row note-box">
            <h3 class="note-title">
              <%= link_to f.title, post_path(f), :class => "title-link" %>
            </h3>
            <div class="note-body">
              <%= truncate(f.description, length: 450) %> <%= link_to "read more", post_path(f) %>
            </div>
            <div class="row box-link-row text-right">
              <div class="want-box-links">
                <b><%= f.price %></b>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>