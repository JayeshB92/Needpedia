<div class="row">
  <div class="page-header">
    <%= link_to new_post_path, class: "btn btn-primary" do %>
      <span class="glyphicon glyphicon-plus"></span>
      <%= t("actions.new") %>
    <% end %>
    <h1>All Problems -- NeedPedia</h1>
  </div>
</div>

<div class="row">


  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-hover custom-index-table" id="users_table">
        

        <tbody>
          <% @posts.each do |post| %>
            <%# Do not use #content_tag_for as it leaks record IDs %>
            <tr>
              <td class="email"><%= post.title.strip %>  
            
              <i>by <strong><%= post.user.full_name %></strong></i></td>
              <td class="actions">
                
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- <div class="flex-centered-column">
      <span><%#= page_entries_info @users %></span>
      <%#= paginate @users %>
    </div>
  </div> -->
</div>
