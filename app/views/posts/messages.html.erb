<div class="container-flex search-index-box">
  <div class="col-md-12">
    <div class="row">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">User list</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @users.each do |user| %>
                <li><%= link_to user.email, rooms_path(user_id: user.id), remote: true, method: :post %></li>
                <%= bootstrap_form_for(:conversation) do |f| %>

                  <%= f.text_area :body %>

                  <%= f.submit %>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>