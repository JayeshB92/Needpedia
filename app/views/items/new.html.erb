<%= display_validation_errors(@item) %>

<div class="panel panel-default devise-bs">
  <div class="panel-heading">
      <h4>Add a "<%= @item_type %>"</h4>
  </div>
  <div class="panel-body">
    <%= form_for(@item,
                 url: items_path,
                 html: { method: :post }) do |f| %>

      <%= f.hidden_field :item_type, value: @item_type %>
      
      <div class="form-group required">
        <%= f.label items_label(:title, @item_type ) %>
        <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "Please specify a title of the Have item you are adding." %>
      </div>
    

      <div class="form-group">
        <label><%= items_label(:details , @item_type ) %></label> 
        <%= f.text_area :details, class: "tinymce", rows: 40 , cols: 120  %>
        <%= tinymce %>
      </div>

      <%= f.submit "Create #{@item_type}", class: "btn btn-primary" %>
    <% end %>
      
  </div>
</div>

