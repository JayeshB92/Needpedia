<%# Custom helper to display internationalized validation errors %>
<div class="container edit-box">
  <%= display_validation_errors(resource) %>

  <div class="panel panel-default devise-bs">
      <div class="note-title-b">
        <h1>
          <%= t('.sign_up', default: "Sign up") %>
        </h1>
      </div>
      <div class="panel-body">
        <%= form_for(resource,
                     as: resource_name,
                     url: registration_path(resource_name),
                     html: { role: "form" }) do |f| %>

          <div class="form-group required">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group required">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="form-group required">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <%# We have added custom attributed to the User model. The corresponding
        form fields reside in a partial that is shared between the new and edit
        views%>
          <%= render partial: "custom_fields", locals: {f: f} %>

          <%= f.submit t('.sign_up', default: "Sign up"), class: "btn btn-primary" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


