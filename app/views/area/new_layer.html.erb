

<div class="container-flex search-index-box">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h4>Create a New Layer on "<%= @area.name %>"</h4>
    </div>
  </div>
</div>

<%= display_validation_errors(@layer) %>
<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default devise-bs">
      <div class="panel-heading">

      </div>
      <div class="panel-body">
        <%= form_for(@layer,
                     url: "/area/#{@area.name}/create_layer",
                     html: { method: :post }) do |f| %>
          <div class="form-group required">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Please specify a name to the Layer you are adding." %>
          </div>
          <div class="form-group">
            <%= f.label :layer_body %>
            <%= f.text_area :layer_body, class: "tinymce", rows: 10 , cols: 80  %>
            <%= tinymce %>
          </div>
          <%= f.submit "Add Layer", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  </div>
</div>

