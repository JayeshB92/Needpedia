<div class="container-flex">
  <div class="col-md-12 notes-box">
    <div class="row show-header text-center">
      <h1><b>
        <%= @video.title %>
      </b></h1>
    </div>
    <div class="row show-author">
      <div class="col-md-3 col-md-offset-1">
        <% if user_signed_in? %>
          <% if current_user.id == @video.user_id %>
            <%= link_to "Edit", edit_video_path(@video), class: "b2" %>
          <% end %>
        <% else %>
          <p><b><%= @video.user.first_name %> <%= @video.user.last_name %></b></p>
        <% end %>
      </div>
      <div class="col-md-3 col-md-offset-4">
        <p class="text-right show-date"><b><%= @video.created_at.strftime("%d/%m/%Y") %></b></p>
      </div>
    </div>
    <div class="row text-center">
      <p><%= @video.description %></p>
    </div>
    <div class="row show-box">
      <div class="col-md-12 text-center">
        <iframe width="840" height="630"
                src="https://www.youtube.com/embed/<%= @video.video %>">
        </iframe>
      </div>
    </div>
  </div>

</div>